<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AccountFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/main_human"
        android:layout_marginStart="@dimen/margin_start_15"
        android:layout_marginTop="@dimen/margin_top_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/updateAccount"
        style="@style/offer_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_15"
        android:text="Ashish Kumar"
        android:drawableEnd="@drawable/ic_edit"
        android:drawablePadding="@dimen/padding_start_8"
        app:layout_constraintStart_toEndOf="@+id/circleImageView"
        app:layout_constraintTop_toTopOf="@+id/circleImageView" />

    <TextView
        style="@style/cart_name_head_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_15"
        android:text="7079692988"
        app:layout_constraintStart_toEndOf="@+id/circleImageView"
        app:layout_constraintTop_toBottomOf="@+id/updateAccount" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_top_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView">

        <com.apps.onlinegroceriesapps.CustomView.CustomViewThreeInOne
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:left_icon_tio="@drawable/ic_orders_icon"
            app:title_tio="Orders" />

        <com.apps.onlinegroceriesapps.CustomView.CustomViewThreeInOne
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:left_icon_tio="@drawable/ic_my_details"
            app:title_tio="Details" />
        <com.apps.onlinegroceriesapps.CustomView.CustomViewThreeInOne
           android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            app:left_icon_tio="@drawable/ic_bell"
            app:title_tio="Notifications" />
        <com.apps.onlinegroceriesapps.CustomView.CustomViewThreeInOne
           android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            app:left_icon_tio="@drawable/ic_help_icon"
            app:title_tio="Help" />
        <com.apps.onlinegroceriesapps.CustomView.CustomViewThreeInOne
           android:id="@+id/aboutus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            app:left_icon_tio="@drawable/ic_about_icon"
            app:title_tio="About Us" />
    </LinearLayout>

    <TextView
        android:id="@+id/logout"
        style="@style/cart_list_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_30"
        android:layout_marginEnd="@dimen/margin_end_30"
        android:drawableStart="@drawable/ic_logout"
        android:background="@drawable/rect_15"
        android:backgroundTint="#F2F3F2"
        android:gravity="center"
        android:padding="@dimen/default_padding"
        android:text="Log Out"
        android:layout_marginTop="@dimen/margin_top_70"
        android:layout_marginBottom="@dimen/margin_bottom_70"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>