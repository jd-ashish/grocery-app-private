<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:scaleType="centerInside"
        android:src="@drawable/main_human"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_name"
        style="@style/product_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_8"
        android:text="product name hai yaha jo kin name likho"
        android:singleLine="true"
        android:layout_marginEnd="@dimen/margin_end_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11" />

    <TextView
        android:id="@+id/qty"
        style="@style/tv_style_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 Qty"
        android:layout_marginTop="@dimen/small_3"
        app:layout_constraintStart_toStartOf="@+id/product_name"
        app:layout_constraintTop_toBottomOf="@+id/product_name" />

    <TextView
        android:id="@+id/amount"
        style="@style/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 156845.20"
        android:layout_marginTop="@dimen/small_3"
        app:layout_constraintStart_toStartOf="@+id/qty"
        app:layout_constraintTop_toBottomOf="@+id/qty" />
    <TextView
        android:id="@+id/status"
        style="@style/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/nsuccess"
        android:layout_marginTop="@dimen/small_3"
        android:text="Status"
        app:layout_constraintStart_toStartOf="@+id/amount"
        app:layout_constraintTop_toBottomOf="@+id/amount" />
</androidx.constraintlayout.widget.ConstraintLayout>