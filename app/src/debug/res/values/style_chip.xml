<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIcon">@drawable/ic_checked_chip</item>
        <item name="chipStrokeColor">@color/chipStrokeColor</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <style name="TinyChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIcon">@drawable/ic_checked_chip</item>
        <item name="chipStrokeColor">@color/chipStrokeColor</item>
        <item name="chipIconSize">20sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Tiny">
        <item name="android:textSize">7sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>